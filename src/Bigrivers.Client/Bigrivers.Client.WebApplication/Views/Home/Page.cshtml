@{
    Bigrivers.Server.Model.Page page = Model;
    ViewBag.Title = page.Title;
}

<div class="content">
    <h1 class="page-title">@page.Title</h1>
    
    @if (page.EditorContent != null) { 
        @Html.Raw(page.EditorContent);
        <br class="clear" />
    }
    
    @if (page.IFrame != null) {
        <iframe src="@page.IFrame"></iframe>
        <br class="clear" />
    }
    
    @if (page.HtmlContent != null) {
        @Html.Raw(page.HtmlContent)
    }
</div>