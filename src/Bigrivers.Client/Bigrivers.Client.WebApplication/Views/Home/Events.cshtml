@{
    ViewBag.Title = "Events";
}

<div class="content">
    <h1 class="page-title">Events</h1>
    <table class="table">
        <thead>
        <tr>
            <th>Event</th>
            <th>Beschrijving</th>
            <th>Start datum</th>
            <th>Eind Datum</th>
            <th>Prijs</th>
        </tr>
        </thead>
        @foreach (Event e in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(e.Title, "Events", new {Id = e.Id})
                </td>
                <td>
                    <p class="EventsDescription">@Html.Raw(e.Description)</p>
                </td>
                <td class="EventsDatum">
                    @e.Start.DateTime.Day - @e.Start.DateTime.Month - @e.Start.DateTime.Year
                </td>
                <td class="EventsDatum">
                    @e.End.DateTime.Day - @e.End.DateTime.Month - @e.End.DateTime.Year
                </td>
                <td class="EventsPrice">
                    € @e.Price
                </td>
            </tr>
        }
    </table>
</div>