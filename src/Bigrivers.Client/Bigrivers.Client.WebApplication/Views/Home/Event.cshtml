@using Bigrivers.Client.WebApplication.Models
@{
    Event currentEvent = Model;
    List<PerformanceListViewModel> performancesByDate = ViewBag.PerformancesByDate;
    ViewBag.Title = currentEvent.Title;
    var Youtube = ViewBag.SiteInformation.YoutubeChannel;
    var Facebook = ViewBag.SiteInformation.Facebook;
    var Twitter = ViewBag.SiteInformation.Twitter;
}

<div class="content">
    <h1 class="page-title">@currentEvent.Title</h1>
    <p>@currentEvent.Description</p>

    <h3>Links:</h3>
    <ul>
        @if (currentEvent.FacebookStatus){<li><a href="@Facebook" target="_blank">Facebook</a></li> }
        @if (currentEvent.YoutubeChannelStatus){<li><a href="@Youtube" target="_blank">YoutubeChannel</a></li> }
        @if (currentEvent.TwitterStatus){<li><a href="@Twitter" target="_blank">Twitter</a></li> }
    </ul>

    <h3>Programma:</h3>
    <div class="day-btn-list">
        @foreach (var day in performancesByDate)
        {
            <h3 id="date-@day.Date.Day" class="day-btn @(day == performancesByDate.First() ? "selected" : "non-selected" )">@day.Date.ToString("dddd dd MMMM")</h3>
        }
    </div>

    @foreach (var day in performancesByDate)
    {
        <table id="date-@day.Date.Day" class="day-table @(day == performancesByDate.First() ? "selected" : "non-selected")">
        <thead>
        <tr>
                <th>Wanneer</th>
                <th>Waar</th>
                <th>Wie</th>
                <th>Tijd</th>
        </tr>
        </thead>
            <tbody>
            @foreach (var p in day.Performances)
            {
            <tr>
                    <td>@p.Start.ToString("dddd dd MMMM")</td>
                    <td>@Html.ActionLink(p.Location.Stagename, "Location", "Home", new { id = p.Location.Id })</td>
                    <td>@Html.ActionLink(p.Artist.Name, "Artists", "Home", new { id = p.Artist.Id })</td>
                    <td>@p.Start.DateTime.ToString("HH:mm") - @p.End.DateTime.ToString("HH:mm")</td>
                </tr>
            }
            </tbody>

        </table>
        }
</div>

<script src="/Scripts/performanceDaySelector.js"></script>