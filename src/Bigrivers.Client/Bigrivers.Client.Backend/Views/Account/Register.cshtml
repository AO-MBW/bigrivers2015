@model Bigrivers.Client.Backend.ViewModels.RegisterViewModel
@{
    ViewBag.Title = "Registreer";
}

<div id="content">
    <div class="form-div">
        <form method="POST" enctype="multipart/form-data">
            @Html.ValidationSummary()
            @Html.AntiForgeryToken()
            <fieldset>
                @Html.LabelFor(m => m.LoginName)
                @Html.TextBoxFor(m => m.LoginName)
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password)
                @Html.LabelFor(m => m.ConfirmPassword)
                @Html.PasswordFor(m => m.ConfirmPassword)
                @Html.LabelFor(m => m.Role)
                @Html.DropDownListFor(m => m.Role, Model.Roles)
            </fieldset>
            <hr />
            <fieldset>
                <input type="submit" name="save" value="Registreer gebruiker">
            </fieldset>
        </form>
    </div>
    
</div>