@using Bigrivers.Server.Model
@model Bigrivers.Client.Backend.ViewModels.ArtistViewModel
@ViewBag.Title = "Create";
@{
    Artist artist = ViewBag.SingleArtist;
}
<div id="wrapper">
    <div class="page-title">
        <h1>Artiest toevoegen</h1>
    </div>

    <div id="content">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <h2>Artiest</h2>
            @Html.LabelFor(a => a.Name)
            @Html.TextBoxFor(a => a.Name, new { @Value = artist.Name })
            @Html.LabelFor(a => a.Description)
            @Html.TextAreaFor(a => a.Description, new { @Value = artist.Description, @Id = "description" })
            @*<script>
                    // Replace the <textarea id="description"> with a CKEditor
                    // instance, using default configuration.
                    CKEDITOR.replace("description");
                </script>*@
            <div class="imageUpload">
                @Html.LabelFor(a => a.Avatar)
                <span>Upload een foto voor de artiest</span><br />
                <input type="file" name="pic">
            </div>
            <hr />
            <div class="url">
                @Html.LabelFor(a => a.Website)
                @Html.TextBoxFor(a => a.Website, new { @Value = artist.Website })
                @Html.LabelFor(a => a.YoutubeChannel)
                @Html.TextBoxFor(a => a.YoutubeChannel, new { @Value = artist.YoutubeChannel })
                @Html.LabelFor(a => a.Facebook)
                @Html.TextBoxFor(a => a.Facebook, new { @Value = artist.Facebook })
                @Html.LabelFor(a => a.Twitter)
                @Html.TextBoxFor(a => a.Twitter, new { @Value = artist.Twitter })
            </div>
            <div class="footer">
                <hr />
                <input type="submit" name="save" value="Artiest opslaan">
            </div>
        }
    </div>
</div>