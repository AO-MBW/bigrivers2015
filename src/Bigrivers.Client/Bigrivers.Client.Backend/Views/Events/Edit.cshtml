@model Bigrivers.Client.Backend.ViewModels.EventViewModel

<div id="wrapper">
    <div class="page-title">
        <h1>@ViewBag.Title</h1>
    </div>

    <div id="content">
        <form method="POST" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()
            <fieldset>
                @Html.LabelFor(m => m.Title)
                @Html.TextBoxFor(m => m.Title)
                @Html.LabelFor(m => m.Description)
                @Html.TextAreaFor(m => m.Description, new { @Id = "description" })
                @Html.LabelFor(m => m.ShortDescription)
                @Html.TextAreaFor(m => m.ShortDescription, new { @Id = "description" })
            </fieldset>
            <hr />
            <fieldset>
                @Html.LabelFor(m => m.FrontpageLogo)
                <input type="file" name="logo">
                @Html.LabelFor(m => m.BackgroundImage)
                <input type="file" name="background">
            </fieldset>
            <fieldset>
                <label>@Html.CheckBoxFor(m => m.WebsiteStatus) Geef link naar website weer</label>
                <label>@Html.CheckBoxFor(m => m.YoutubeChannelStatus) Geef link naar Youtubekanaal weer</label>
                <label>@Html.CheckBoxFor(m => m.FacebookStatus) Geef link naar Facebookpagina weer</label>
                <label>@Html.CheckBoxFor(m => m.TwitterStatus) Geef link naar Twitterpagina weer</label>
            </fieldset>
            <hr />
            <fieldset>
                @Html.LabelFor(m => m.Start)
                @Html.TextBoxFor(m => m.Start, new { @id = "datepicker1" })
                @Html.LabelFor(m => m.End)
                @Html.TextBoxFor(m => m.End, new { @id = "datepicker2" })
            </fieldset>
            <fieldset>
                <label>@Html.CheckBoxFor(m => m.TicketRequired, new { id = "TicketRequired" }) Tickets Verplicht</label>
                @Html.LabelFor(m => m.Price)
                @Html.TextBoxFor(m => m.Price, new { id = "Price" })
            </fieldset>
            <fieldset>
                <label class="label label-selectable">@Html.CheckBoxFor(m => m.Status) Actief</label>
            </fieldset>
            <hr />
            <div class="footer">
                <input type="submit" name="save" value="Evenement opslaan">
            </div>
        </form>
            <script src="/Scripts/ViewScripts/Event-Edit.js"></script>
</div>
</div>